<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="1.0"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@color/colorPrimary"
                android:theme="@style/BasicComplaintTheme"
                tools:context=".fragment.ComplaintComments">
    <TextView
            android:id="@+id/komentar_text"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.08"
            android:textSize="@dimen/heading_1"
            android:fontFamily="sans-serif-light"
            android:text="@string/comments"/>
    <ListView
            android:id="@+id/comment_list_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.77"
            android:divider="@android:color/transparent"
            android:dividerHeight="@dimen/medium_margin"/>
    <LinearLayout
            android:id="@+id/send_comment_form"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:orientation="horizontal"
            android:weightSum="1.0">
        <EditText
                android:id="@+id/add_comment_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/medium_margin"
                android:layout_marginBottom="@dimen/medium_margin"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:hint="@string/type_comment"
                android:layout_weight="0.95"
                android:inputType="text"
                android:padding="@dimen/medium_padding"
                android:background="@drawable/login_form_background"/>
        <ImageButton
                android:id="@+id/add_image_comment_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/small_padding"
                app:srcCompat="@drawable/ic_image_black_24dp"
                android:background="@drawable/image_button_background"/>

        <ImageButton
                android:id="@+id/send_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/small_padding"
                app:srcCompat="@drawable/ic_send_black_24dp"
                android:background="@drawable/image_button_background"/>

    </LinearLayout>
</LinearLayout>