<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/keluhan_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="@dimen/medium_margin"
        app:cardPreventCornerOverlap="false">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/large_padding"
            >
        <View
                android:id="@+id/user_submitted_photos"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@color/shimmer_background"
                />
        <View
                android:id="@+id/submitted_username"
                android:layout_width="100dp"
                android:layout_height="12dp"
                android:layout_marginLeft="@dimen/small_margin"
                android:layout_toRightOf="@id/user_submitted_photos"
                android:background="@color/shimmer_background"
                />
        <View
                android:id="@+id/date_submitted"
                android:layout_width="80dp"
                android:layout_height="12dp"
                android:layout_marginLeft="@dimen/small_margin"
                android:layout_below="@id/submitted_username"
                android:layout_toRightOf="@id/user_submitted_photos"
                android:background="@color/shimmer_background"
                />
        <View
                android:id="@+id/context_menu_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:background="@color/shimmer_background"
                />
        <View
                android:id="@+id/keluhan_title"
                android:layout_width="match_parent"
                android:layout_height="28sp"
                android:layout_below="@id/user_submitted_photos"
                android:layout_marginTop="@dimen/medium_padding"
                android:layout_marginBottom="@dimen/medium_padding"
                android:background="@color/shimmer_background"
                />

        <View
                android:id="@+id/object_photos"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_marginBottom="@dimen/super_large_margin"
                android:layout_below="@id/keluhan_title"
                android:background="@color/shimmer_background"
                />
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/keluhan_type_and_status_parent_view"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:padding="@dimen/small_padding"
            android:background="@color/shimmer_background">
    </RelativeLayout>
</androidx.cardview.widget.CardView>