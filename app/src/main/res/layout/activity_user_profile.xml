<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/medium_padding"
        tools:context=".UserProfileActivity"
        android:gravity="center"
        android:background="@color/colorPrimary">
    <ImageView
        android:id="@+id/user_profile_picture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@mipmap/ic_launcher"/>
    <TextView
            android:id="@+id/user_full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/user_profile_picture"
            android:layout_marginTop="@dimen/large_margin"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/heading_4"
            android:text="Tjokorda Raka Wisnu" />
    <TextView
            android:id="@+id/user_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/user_full_name"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-light"
            android:textSize="@dimen/heading_4"
            android:text="Mahasiswa" />
    <TextView
            android:id="@+id/text_personal_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/user_role"
            android:layout_marginTop="@dimen/super_large_margin"
            android:textColor="@color/white"
            android:text="@string/personal_information"
            />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_below="@id/text_personal_information"
            android:padding="@dimen/medium_padding"
            android:background="@drawable/white_rounded_square"
            android:orientation="vertical">
        <!--start one field-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/medium_margin"
                    app:srcCompat="@drawable/ic_assignment_ind_black_24dp"/>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/small_margin"
                        android:textSize="@dimen/heading_4"
                        android:text="@string/identity_number"/>
                <TextView
                        android:id="@+id/user_identity_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/small_margin"
                        android:fontFamily="sans-serif-light"
                        android:text="4817040316"/>
            </LinearLayout>
        </LinearLayout>
        <View style="@style/Divider" />
        <!--eof one field-->
        <!--start one field-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/medium_margin"
                    app:srcCompat="@drawable/ic_school_black_24dp"/>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/small_margin"
                        android:textSize="@dimen/heading_4"
                        android:text="@string/department"/>
                <TextView
                        android:id="@+id/user_department"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/small_margin"
                        android:fontFamily="sans-serif-light"
                        android:text="Metalurgi dan Geofisika"/>
            </LinearLayout>
        </LinearLayout>
        <View style="@style/Divider" />
        <!--eof one field-->
        <!--start one field-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/medium_margin"
                    app:srcCompat="@drawable/ic_email_black_24dp"/>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/small_margin"
                        android:textSize="@dimen/heading_4"
                        android:text="@string/email"/>
                <TextView
                        android:id="@+id/user_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/small_margin"
                        android:fontFamily="sans-serif-light"
                        android:text="tjokorda.coding@gmail.com"/>
            </LinearLayout>
        </LinearLayout>
        <!--eof one field-->
    </LinearLayout>

</RelativeLayout>