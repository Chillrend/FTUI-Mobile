<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/medium_padding"
        tools:context=".UserProfileActivity"
        android:gravity="center"
        android:background="@color/colorPrimary">
    <ImageView
        android:id="@+id/user_profile_picture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@mipmap/ic_launcher"/>
    <TextView
            android:id="@+id/user_full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/user_profile_picture"
            android:layout_marginTop="@dimen/large_margin"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/heading_4"
            android:text="Tjokorda Raka Wisnu" />
    <TextView
            android:id="@+id/user_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/user_full_name"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-light"
            android:textSize="@dimen/heading_4"
            android:text="Mahasiswa" />
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/super_large_margin"
            android:layout_below="@id/user_role"
            android:padding="@dimen/medium_padding"
            android:background="@drawable/white_rounded_square">
        <!--start profile view-->
        <ImageView
                android:id="@+id/icon_identity"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                app:srcCompat="@drawable/ic_assignment_ind_black_24dp"/>
        <TextView
                android:id="@+id/default_text_identity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/icon_identity"
                android:layout_marginLeft="@dimen/small_margin"
                android:textSize="@dimen/heading_4"
                android:text="Nomor Identitas"/>
        <TextView
                android:id="@+id/user_identity_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small_margin"
                android:layout_below="@id/default_text_identity"
                android:layout_toRightOf="@id/icon_identity"
                android:fontFamily="sans-serif-light"
                android:text="4817040316"/>
        <View style="@style/Divider"
              android:layout_marginTop="@dimen/medium_margin"
              android:layout_marginBottom="@dimen/medium_margin"
              android:layout_below="@id/user_identity_number"/>
        <!--eof profile view-->
    </RelativeLayout>



</RelativeLayout>