<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:tabMode="scrollable"
        app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
        app:tabTextColor="@color/lightBlue300"
        app:tabSelectedTextColor="@color/lightBlue300"
        android:id="@+id/pdf_reader_tabLayout"
        android:background="@color/white"></android.support.design.widget.TabLayout>

    <com.rsypj.ftuimobile.extend.SmartSIPViewPager
        android:id="@+id/pdf_reader_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.rsypj.ftuimobile.extend.SmartSIPViewPager>
</LinearLayout>