<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:id="@+id/actionBar">
        <ImageView
            android:id="@+id/activity_approvedivBack"
            android:layout_width="40dp"
            android:layout_height="27dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/back"/>
        <com.rsypj.ftuimobile.extend.SmartSIPTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/activity_approved_tvNama"
            android:textColor="@color/lightBlue300"
            android:layout_centerInParent="true"
            android:textSize="15dp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="27dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/plane"
            android:id="@+id/activity_approved_ivSend"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/shadow"
        android:layout_below="@+id/actionBar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/actionBar">

        <ImageView
            android:id="@+id/activity_approved_ivImage"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"/>

        <com.rsypj.ftuimobile.extend.SmartSIPEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/tulisketerangan"
            android:backgroundTint="@color/lightBlue300"
            android:textColorHint="@color/lightBlue300"
            android:textColor="@color/black"
            android:inputType="textMultiLine"
            android:layout_below="@+id/activity_approved_ivImage"
            android:id="@+id/activity_approved_etKeterangan"/>

        <com.rsypj.ftuimobile.extend.SmartSIPTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/activity_approved_ivImage"
            android:textColor="@color/lightBlue300"
            android:text="Lokasi Anda Saat Ini:"
            android:id="@+id/tulisanlokasiandasaatini"/>
        <com.rsypj.ftuimobile.extend.SmartSIPEditText
            android:id="@+id/activity_approved_tvLoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Masukkan Lokasi anda .."
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/tulisanlokasiandasaatini"
            android:textSize="15dp"
            android:layout_toRightOf="@+id/activity_approved_ivImage"
            android:textColor="@color/black"
            android:background="@color/white"/>

    </RelativeLayout>
</RelativeLayout>