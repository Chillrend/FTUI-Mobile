<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        tools:context=".VerifyStudentForRegister"
        android:background="@color/colorPrimary"
        android:padding="@dimen/large_padding">
    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:contentDescription="University of Indonesia's Logo"
            app:srcCompat="@drawable/ic_ui_logo"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/heading_1"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium"
            android:text="SSO - Single Sign On"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_margin"
            android:textColor="@color/white"
            android:gravity="center"
            android:fontFamily="sans-serif-light"
            android:text="@string/info_user_eligibility" />

    <Button
            android:id="@+id/goVerifyWithSSO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:drawableLeft="@drawable/ic_ui_logo_small_24dp"
            android:padding="@dimen/large_padding"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:text="Login dengan SSO-UI"/>
</LinearLayout>