<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:id="@+id/actionBar">
        <ImageView
            android:id="@+id/activity_upload_ivBack"
            android:layout_width="40dp"
            android:layout_height="27dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/back"/>
        <com.rsypj.ftuimobile.extend.SmartSIPTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/activity_upload_tvNama"
            android:textColor="@color/lightBlue300"
            android:layout_centerInParent="true"
            android:textSize="15dp"/>

        <ImageView
            android:visibility="gone"
            android:layout_width="40dp"
            android:layout_height="27dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/plane"
            android:id="@+id/activity_upload_ivSend"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/shadow"
        android:layout_below="@+id/actionBar"/>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/actionBar">

        <ImageView
            android:id="@+id/activity_upload_ivImage"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"/>

        <com.rsypj.ftuimobile.extend.SmartSIPEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/tulisketerangan"
            android:backgroundTint="@color/lightBlue300"
            android:textColorHint="@color/lightBlue300"
            android:textColor="@color/black"
            android:inputType="textMultiLine"
            android:layout_below="@+id/activity_upload_ivImage"
            android:id="@+id/activity_upload_etKeterangan"/>

        <com.rsypj.ftuimobile.extend.SmartSIPTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/activity_upload_ivImage"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Lokasi Anda Saat Ini:"
            android:id="@+id/tulisanlokasianda"
            android:textColor="@color/lightBlue300"/>

        <com.rsypj.ftuimobile.extend.SmartSIPEditText
            android:id="@+id/activity_upload_tvLoc"
            android:layout_below="@+id/tulisanlokasianda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="15dp"
            android:layout_toRightOf="@+id/activity_upload_ivImage"
            android:backgroundTint="@color/lightBlue300"
            android:textColorHint="@color/lightBlue300"
            android:textColor="@color/black"
            android:inputType="textMultiLine"
            android:hint="Masukkan Lokasi"/>

        <com.rsypj.ftuimobile.extend.SmartSIPTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Kategori: "
            android:layout_below="@+id/activity_upload_etKeterangan"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/tulisanCategori"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:id="@+id/upload_cardCari"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/tulisanCategori">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.rsypj.ftuimobile.extend.SmartSIPEditText
                    android:id="@+id/upload_etSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:background="@color/white"
                    android:hint="Cari Kategori"
                    android:layout_toRightOf="@+id/search_icon"
                    android:layout_centerVertical="true"
                    android:textColorHint="#78909C"/>

                <ImageView
                    android:padding="3dp"
                    android:id="@+id/search_icon"
                    android:src="@drawable/search"
                    android:background="@color/white"
                    android:layout_width="35dp"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/upload_cardCari"
            android:id="@+id/activity_upload_catList"></android.support.v7.widget.RecyclerView>

    </RelativeLayout>


</RelativeLayout>