<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1.0"
        android:background="@color/colorPrimary"
        tools:context=".AddComplaintCamera">
    <com.otaliastudios.cameraview.CameraView
            android:id="@+id/camera_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.57"
            android:keepScreenOn="true"
            app:cameraMode="picture"
            app:cameraPictureSizeMinWidth="200"
            app:cameraPictureSizeMinHeight="400"
            app:cameraPictureSizeMaxWidth="200"
            app:cameraPictureSizeMaxHeight="400"
            app:cameraPictureSizeMinArea="10000000"
            app:cameraPictureSizeMaxArea="50000000"
            app:cameraPictureSizeAspectRatio="1:1"
            app:cameraPictureSizeBiggest="true"
            app:cameraAudio="off"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="0.12"
            android:weightSum="1.0"
            android:padding="@dimen/large_padding"
            android:background="@color/button_background">
        <ImageButton
                android:id="@+id/add_picture_from_sd"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="0.33"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_sharp_add_a_photo_24px"/>
        <ImageButton
                android:id="@+id/take_picture"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="0.33"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_sharp_camera_alt_24px"/>
        <ImageButton
                android:id="@+id/flash_on_off"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="0.33"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_sharp_flash_on_24px"/>
    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.03"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/writings"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/white"
            android:text="@string/object_take_picture_info"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.18"
            android:layout_gravity="center_vertical"
            android:paddingTop="@dimen/small_padding"
            android:paddingBottom="@dimen/small_padding"
            android:paddingStart="@dimen/medium_padding"
            android:paddingEnd="@dimen/medium_padding"
            android:orientation="horizontal"
            android:weightSum="1.0">
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/captured_photos_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </LinearLayout>
    <Button
            android:id="@+id/next_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:textColor="@color/white"
            android:background="@color/button_background"
            android:text="@string/next"/>

</LinearLayout>