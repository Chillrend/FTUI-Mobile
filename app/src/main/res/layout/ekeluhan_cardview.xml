<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/keluhan_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="@dimen/medium_margin"
        app:cardPreventCornerOverlap="false">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/large_padding"
            >
        <ImageView
                android:id="@+id/user_submitted_photos"
                android:layout_width="38dp"
                android:layout_height="38dp"
                app:srcCompat="@mipmap/ic_launcher_round"
                />
        <TextView
                android:id="@+id/submitted_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small_margin"
                android:layout_toRightOf="@id/user_submitted_photos"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:text="Tjokorda Raka Wisnu"/>
        <TextView
                android:id="@+id/date_submitted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small_margin"
                android:layout_below="@id/submitted_username"
                android:layout_toRightOf="@id/user_submitted_photos"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/black"
                android:text="Senin, 24 Juni 2019"/>
        <ImageView
                android:id="@+id/on_place_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="@dimen/small_margin"
                android:layout_toRightOf="@id/date_submitted"
                android:layout_below="@id/submitted_username"
                app:srcCompat="@drawable/ic_outline_location_on_24px" />
        <TextView
                android:id="@+id/object_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/on_place_icon"
                android:layout_below="@id/submitted_username"
                android:fontFamily="sans-serif-light"
                android:maxLines="1"
                android:maxEms="7"
                android:ellipsize="end"
                android:text="Hall Engineering Center" />
        <ImageButton
                android:id="@+id/context_menu_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:background="@null"
                app:srcCompat="@drawable/ic_keyboard_arrow_down_black_24dp"/>
        <TextView
                android:id="@+id/keluhan_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:layout_below="@id/user_submitted_photos"
                android:paddingTop="@dimen/medium_padding"
                android:paddingBottom="@dimen/medium_padding"
                android:text="Nulla in ante id ipsum ultricies scelerisque. Phasellus ultrices diam."/>

        <ImageView
                android:id="@+id/object_photos"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_marginBottom="@dimen/super_large_margin"
                android:scaleType="fitXY"
                android:layout_below="@id/keluhan_title"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/keluhan_type_and_status_parent_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:padding="@dimen/small_padding"
            android:background="#E52250">
        <ImageView
                android:id="@+id/keluhan_type_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@drawable/ic_event_seat_white_24dp"/>
        <TextView
                android:id="@+id/keluhan_type_and_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_marginLeft="@dimen/small_margin"
                android:layout_toRightOf="@id/keluhan_type_icon"
                android:text="Sarana &amp; Prasarana | Menunggu Tindak Lanjut"
                android:layout_centerVertical="true"
                style="@style/KeluhanCardViewFooterTheme"/>

        <TextView
                android:id="@+id/comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/small_margin"
                android:layout_toLeftOf="@id/comment_icon"
                android:layout_centerVertical="true"
                android:text="2"
                style="@style/KeluhanCardViewFooterTheme"/>
        <ImageView
                android:id="@+id/comment_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/ic_comment_white_24dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>