<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:layout_marginLeft="5dp"
            android:src="@drawable/logoft"/>
        <com.rsypj.ftuimobile.extend.SmartSIPTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/lightBlue300"
            android:text="Academic Guide Book"
            android:textSize="16dp"/>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:id="@+id/home_guide_book_card_search"
        android:layout_margin="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.rsypj.ftuimobile.extend.SmartSIPEditText
                android:id="@+id/home_guide_book_etSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:background="@color/white"
                android:hint="Cari Buku"
                android:layout_toRightOf="@+id/search_icon"
                android:layout_centerVertical="true"
                android:textColorHint="#78909C"/>

            <ImageView
                android:padding="3dp"
                android:id="@+id/search_icon"
                android:src="@drawable/search"
                android:background="@color/white"
                android:layout_width="35dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/home_guide_book_refresh">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.rsypj.ftuimobile.extend.SmartSIPTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:id="@+id/home_guide_book_noData"
                android:text="Data not Found!"/>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:id="@+id/home_guide_book_list"></android.support.v7.widget.RecyclerView>
        </RelativeLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>